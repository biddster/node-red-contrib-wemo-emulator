{
    "name": "node-red-contrib-wemo-emulator",
    "version": "1.0.0",
    "main": "index.js",
    "keywords": [
        "node-red",
        "wemo",
        "emulator",
        "amazon",
        "echo",
        "alexa"
    ],
    "scripts": {
        "start": "mkdir -p .node-red/node_modules && ln -sf $PWD $PWD/.node-red/node_modules/node-red-contrib-wemo-emulator && node-red -u .node-red",
        "test": "nyc --reporter=html ./node_modules/mocha/bin/mocha test --recursive --reporter spec"
    },
    "dependencies": {
        "lodash": "^4.17.15",
        "wemore": "0.6.2"
    },
    "author": "@biddster",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/biddster/node-red-contrib-wemo-emulator.git"
    },
    "bugs": {
        "url": "https://github.com/biddster/node-red-contrib-wemo-emulator/issues"
    },
    "node-red": {
        "nodes": {
            "wemo-emulator": "index.js"
        }
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-biddster": "^0.6.0",
        "eslint-config-prettier": "^6.9.0",
        "mocha": "^7.0.1",
        "node-red-contrib-mock-node": "^0.4.0",
        "nyc": "^15.0.0",
        "prettier": "^1.19.1"
    },
    "eslintConfig": {
        "env": {
            "es6": true,
            "node": true,
            "mocha": true
        },
        "extends": [
            "eslint-config-biddster/es6-node",
            "prettier"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 96
    }
}
